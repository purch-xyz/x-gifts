    "@x402/svm": "^2.1.0",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4",
    "postgres": "^3.4.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@solana/addresses": "^2.0.0",
